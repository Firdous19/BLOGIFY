<!DOCTYPE html>
<html lang="en">

<head>
    <title>Blog</title>
    <%- include('./partials/head') %>
</head>

<body>
    <%- include('./partials/navbar') %>

        <div class="container mt-4">
            <h1 class="mt-3">
                <%= blog.title %>
            </h1>
            <img class="mt-3" src="<%= blog.coverImageURL %>" alt="" width="50%">
            <p class="mt-3">
                <%= blog.body %>
            </p>
        </div>

        <div class="container mt-4">
            <img src="<%= blog.createdBy.profileImageURL %>" alt="" width="100px">
            <%= blog.createdBy.fullName %>
                <h5></h5>
        </div>

        <% if (locals.user) { %>
            <div class="container mt-4">
                <h3 class="mb-3">Comments (<%= comments.length %>)</h3>
                <form method="post" action="/blog/comment/<%= blog._id %>">
                    <div class="mb-2">
                        <input type="text" class="form-control" name="content" placeholder="Enter your comment">
                    </div>
                    <button type="submit" class="btn btn-primary">Add</button>
                </form>
            </div>
        <% } %>

        <div class="container mt-4">
            <% comments.forEach(comment => { %>
             <div>
                <img src="<%= comment.createdBy.profileImageURL %>" alt="" width="100px">
                <%= comment.createdBy.fullName %>
                <pre><h4><%= comment.content %></h4></pre>
             </div>
            <% }) %>
        </div>

        <%- include('./partials/scripts') %>
</body>

</html>